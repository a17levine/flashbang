<% if @exchange.place %>

	<h3><%= link_to @exchange.place.name, @exchange.place.url %></h3>
	<p><%= @exchange.place.address %></p>
	<%= link_to image_tag(@exchange.place.static_map), @exchange.place.url %>

<% else %>
	<p>No location chosen</p>
	<p>If needed, drag the pin to get more specific</p>
	
	<%= form_for [@exchange], url: "#{exchange_path(@exchange)}/saveplace", method: "post" do |f| %>
		<%= f.hidden_field :id %>
	  <%= fields_for @place do |ff| %>
	  	<%= ff.hidden_field :name, id: "place_name" %>
	    <%= ff.hidden_field :address, id: "place_address" %>
	  	<%= ff.hidden_field :url, id: "place_url" %>
	  <% end %>
	  <%= f.submit "save place" %>
	<% end %>

	<div style="height:500px">
		<input id="pac-input" class="controls" type="text"
		        placeholder="Enter a location">
		<div id="map-canvas"></div>
	</div>


<% end %>






