<%= render "shared/navbar" %>

<% provide(:title, "$#{@post.price} #{@post.tags.first.name}...") %>

<div class='row'>
	<div>
		<h2 class="large-offset-3">listed price <%= number_to_currency(@post.price, precision: 0) %></h2>	
	</div>
</div>	

<div class='row'>
	<div class='small-centered columns'>
		<%= image_tag @post.picture, :class => 'show-picture'  %>
	</div>
</div>

<div class="row tag-box">
	<ul id="mytags" class="tagit ui-widget ui-widget-content ui-corner-all show-tags">
		<% @post.tags.each do |t| %>
			<%= link_to(tag_path(t.name)) do %>
		    <li class= "tagit-choice ui-widget-content ui-state-default ui-corner-all">
		    	<span class="tagit-label">#<%= t.name  %></span>
		  	</li>
		  <% end %>
  	<% end %>
  </ul>
</div>

<div class="row">

	<% if @post.max_offer %>
		<h1>Highest offer: <%= number_to_currency(@post.max_offer.amount, precision: 0) %></h1>	
	<% else %>	
		<h1>No offers yet</h1>
	<% end %>
	
	<a class="radius button" id="offerButton" href="#" data-reveal-id="offerModal">Make an Offer</a>

<!-- Offer Modal ------------------------------------------------------- -->

	<div id="offerModal" class="reveal-modal" data-reveal>
	  <h2>Make an Offer</h2>
	  <p class="lead">Highest offer is <%= number_to_currency(@post.max_offer.amount, precision: 0) %></p>
	  <p>Im a cool paragraph that lives inside of an even cooler modal. Wins</p>
	  <%= form_for [@user, @post, @offer] do |f| %>
			<%= f.text_field :amount, id: 'offerEntryField' %>
			<%= f.submit "Offer" %>
		<% end %>
	  <a class="close-reveal-modal">&#215;</a>
	</div>
</div>

<!-- End of Offer Modal ------------------------------------------------------- -->

<div class="row comment-post">
	<%= form_for [@user, @post, @comment] do |f| %>
		<%= f.text_field :text, :autofocus => true %>
		<%= f.submit "Comment" %>
	<% end %>
</div>

<div class="row comments">
	<% @post.comments.each do |c| %>
		<div class="row comment">
			<%#= c.user.first_name %>
			<%= c.text %>
		</div>
	<% end %>
</div>
