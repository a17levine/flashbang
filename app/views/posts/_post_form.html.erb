<%= form_for [@user, @post] do |f| %>
	<p style="margin-top:101px">1. upload image</p>
  <%= f.file_field :picture, accept: 'image/png,image/jpeg' %>
  <p>2. add price</p>
  <%= f.text_field :price,placeholder: "price" %>
  <%= f.hidden_field :tag_list %>
  <p>3. add tags (max 5)</p>
  
  <ul id="mytags"></ul>

  <%= f.submit "post" %>
<% end %>