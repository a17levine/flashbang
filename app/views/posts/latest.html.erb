<%= render "shared/navbar" %>

<div class='row'>
	<div>
		<h1 class="large-offset-3">latest posts</h1>	
	</div>

	<% @latest_posts.each do |p| %>
	<div class='columns large-5 large-offset-3 post'>
		<%= image_tag p.picture%>
		<h4>$<%= p.price  %>
			<br>	
			<small>1 offer // 2 comments - posted 5 minutes ago</small>
		</h4>
	</div>

	<% end %>
</div>