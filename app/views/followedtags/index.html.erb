<% provide(:title, "your tags") %>

<div class='row latest-posts'>
	<div>
		<h1 class="large-offset-3">following</h1>	
		<div class="large-offset-3">
			<%= link_to "edit", followed_tags_show_path, :class => "button tiny" %>
		</div>
	</div>
	
	<% if @relevant_posts.nil? %>
		<p>No posts to display</p>
	<% else %>
		<%= render partial: "posts/post", collection: @relevant_posts %>
	<% end %>
	
</div>